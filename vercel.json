{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "cd ../.. && bun run build --filter=nextjs",
  "installCommand": "bun install",
  "framework": "nextjs",
  "outputDirectory": "apps/nextjs/.next",
  "github": {
    "silent": true
  },
  "functions": {
    "apps/nextjs/src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "regions": ["iad1"],
  "env": {
    "SKIP_ENV_VALIDATION": "1"
  }
}
